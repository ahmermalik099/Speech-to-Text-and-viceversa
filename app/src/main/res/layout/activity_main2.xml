<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/speechback"
    tools:context=".MainActivity2">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="106dp"
        android:layout_marginVertical="380dp"
        android:outlineSpotShadowColor="@color/white" />

    <EditText
        android:id="@+id/txt_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_translate_vtranslator"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#880000"
        android:fontFamily="@font/distro"
        android:textSize="20dp"
        android:onClick="translatetext"
        android:text="Translate the text"
        android:textColor="#ffffff" />

    <android.widget.Button
        android:id="@+id/btn_translate_vtranslator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/TS"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#880000"
        android:fontFamily="@font/distro"
        android:textSize="20dp"
        android:onClick="btnspeech"
        android:text="Tap to speak"
        android:textColor="#ffffff"
        android:textStyle="bold" />


    <Button
        android:id="@+id/TS"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_button"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/speechtext"
        android:onClick="activity4"
        android:text="Text To Speech"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/speechtext"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_button"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="activity3"
        android:text="Translator"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginVertical="280dp"
        android:text="select language to translate"
        android:textColor="@color/white" />

</RelativeLayout>