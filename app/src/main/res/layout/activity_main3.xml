<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/language1"
    android:padding="10dp"
    tools:context=".MainActivity3">


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:background="#000000"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="25dp"
        android:hint="Enter text here"

        />

    <Button
        android:id="@+id/bt_convert"
        android:layout_width="139dp"
        android:layout_height="56dp"
        android:textSize="19dp"
        android:layout_below="@+id/et_input"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/distro"
        android:backgroundTint="#880000"
        android:text="Convert" />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:backgroundTint="#880000"
        android:textStyle="bold"
        android:textSize="19dp"
        android:fontFamily="@font/distro"
        android:layout_below="@+id/bt_convert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Clear"

        />

    <Button
        android:id="@+id/TS"
        android:layout_width="168dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_button"
        android:layout_toRightOf="@+id/speechtext"
        android:onClick="activity4"
        android:text="Text To Speech"
        android:textColor="#ffffff"

        />

    <Button
        android:id="@+id/speechtext"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_button"
        android:onClick="activity2"
        android:text="Speech To Text"
        android:textColor="#ffffff" />


</RelativeLayout>